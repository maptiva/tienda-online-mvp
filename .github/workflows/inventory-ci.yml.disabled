name: Inventory CI Tests

on:
  push:
    branches: [ 'motor-stock-definitivo', 'main' ]
  pull_request:
    branches: [ 'main', 'motor-stock-definitivo' ]

jobs:
  inventory-tests:
    name: Run inventory integration tests against Staging/Demo
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install
        run: npm ci

      - name: Run inventory tests
        env:
          SUPABASE_URL: ${{ secrets.SUPABASE_URL }}
          SUPABASE_SERVICE_ROLE_KEY: ${{ secrets.SUPABASE_SERVICE_ROLE_KEY }}
        run: npm run test:inventory
